<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test.ToolbarEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent">

        <TextView
            android:id="@id/toolbarTitle"
            tools:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/homeSearchDefaultkeyword"
            app:navigationIcon="@mipmap/return_pager"
            android:textColor="@color/init_font"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:autofillHints="@string/hello_blank_fragment"
        tools:ignore="LabelFor" />


</RelativeLayout>